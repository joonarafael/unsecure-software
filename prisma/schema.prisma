generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    USER
}

model User {
    id       String   @id @default(cuid())
    username String   @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime? @updatedAt
    role     Role     @default(USER)
}

model Todo {
    id       String   @id @default(cuid())
    userId String
    title    String
    description String?
    createdAt DateTime @default(now())
    updatedAt DateTime? @updatedAt
    done     Boolean  @default(false)
}
